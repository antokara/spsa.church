{
  "name": "spsa.church",
  "version": "1.0.0",
  "description": "St. Peter & St. Andrew Coptic Orthodox Church website",
  "private": true,
  "main": "src/index.tsx",
  "scripts": {
    "test": "TZ=UTC jest",
    "test:cov": "TZ=UTC jest --coverage",
    "coveralls": "cat ./reports/coverage/lcov.info | coveralls",
    "prettier": "npx prettier --check 'src/**/*.ts?(x)'",
    "lint": "tslint 'src/**/*.ts?(x)' -c tslint.json",
    "build": "npm run build:clean && npm run build:js",
    "build:clean": "rm dist/* -rf",
    "build:js": "webpack --config ./webpack.build.js --env.NODE_ENV=production --env.production --progress",
    "cl": "commitlint --from=HEAD~1",
    "ts:validate": "tsc -p tsconfig.build.json --outDir /tmp",
    "start": "node --max-old-space-size=2048 node_modules/webpack-dev-server/bin/webpack-dev-server.js --config ./webpack.dev.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antokara/spsa.church.git"
  },
  "keywords": [
    "typescript",
    "javascript",
    "react",
    "redux",
    "graphql",
    "pwa",
    "webapp",
    "website"
  ],
  "author": {
    "name": "Antonios Karagiannis",
    "email": "antokarag@gmail.com",
    "url": "https://antokara.me"
  },
  "license": "CC-BY-NC-ND-4.0",
  "bugs": {
    "url": "https://github.com/antokara/spsa.church/issues"
  },
  "homepage": "https://github.com/antokara/spsa.church#readme",
  "prettier": {
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.5.4",
    "@testing-library/dom": "^6.8.1",
    "@testing-library/jest-dom": "^4.1.2",
    "@testing-library/react": "^9.3.0",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^24.0.19",
    "clean-webpack-plugin": "^3.0.0",
    "coveralls": "^3.0.7",
    "dotenv": "^8.1.0",
    "dotenv-webpack": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "react-dom": "^16.10.2",
    "semantic-release": "^15.13.27",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "tscpaths": "0.0.9",
    "tslint": "^5.20.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-react": "^4.1.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2",
    "webpack-merge": "^4.2.2",
    "webpack-pwa-manifest": "^4.1.1",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "dependencies": {
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "react": "^16.10.2",
    "react-dom": "^16.10.2"
  }
}
